<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Dark Theme with Primary Background -->
    <style name="Login" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <!-- Toolbar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="swirl_ridgeColor">@color/white</item>
        <item name="swirl_errorColor">@color/red700</item>
    </style>

    <style name="Login.ButtonPrimary" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorButtonDark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Login.ButtonFlat" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/transparent</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>