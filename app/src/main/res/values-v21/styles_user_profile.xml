<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Profile" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryWhite</item>
        <item name="colorPrimaryDark">@color/colorPrimaryWhite</item>
        <item name="colorAccent">@color/colorAccentBlue</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:navigationBarColor">@color/colorBottomNavGray</item>
    </style>

    <style name="Profile.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Profile.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>