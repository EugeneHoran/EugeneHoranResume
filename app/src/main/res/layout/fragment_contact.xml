<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@color/white"
        android:elevation="1dp">

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="invisible"
            app:cameraZoom="15"
            app:liteMode="true"
            app:mapType="normal" />

        <RelativeLayout
            android:id="@+id/viewAddress"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/black_transparency"
            android:gravity="center_vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/textAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/white" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/viewContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mapView"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/viewPhonePrimary"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:id="@+id/textPhonePrimary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/imgCopyPrimary"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginRight="16dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:padding="7dp"
                    android:tint="@color/colorPrimaryBlue"
                    app:srcCompat="@drawable/ic_content_copy" />

                <ImageView
                    android:id="@+id/imgMessagePrimary"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginRight="16dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:padding="7dp"
                    android:tint="@color/colorPrimaryBlue"
                    app:srcCompat="@drawable/ic_message" />

                <ImageView
                    android:id="@+id/imgPhonePrimary"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:padding="7dp"
                    android:tint="@color/colorPrimaryBlue"
                    app:srcCompat="@drawable/ic_phone" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE" />

            <LinearLayout
                android:id="@+id/viewPhoneSecondary"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:id="@+id/textPhoneSecondary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/imgCopySecondary"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginRight="16dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:padding="7dp"
                    android:tint="@color/colorPrimaryBlue"
                    app:srcCompat="@drawable/ic_content_copy" />

                <ImageView
                    android:id="@+id/imgPhoneSecondary"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:padding="7dp"
                    android:tint="@color/colorPrimaryBlue"
                    app:srcCompat="@drawable/ic_phone" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE" />

            <LinearLayout
                android:id="@+id/viewEmail"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:id="@+id/textEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/imgCopyEmail"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginRight="16dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:padding="7dp"
                    android:tint="@color/colorPrimaryBlue"
                    app:srcCompat="@drawable/ic_content_copy" />

                <ImageView
                    android:id="@+id/imgEmail"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:padding="7dp"
                    android:tint="@color/colorPrimaryBlue"
                    app:srcCompat="@drawable/ic_email" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="@string/i_will_be_moving_in_the_next_few_months_to_nassau_county"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>