<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="object"
            type="com.resume.horan.eugene.eugenehoranresume.model.ResumePdf" />

        <variable
            name="holder"
            type="com.resume.horan.eugene.eugenehoranresume.main.resume.ResumeExperienceRecyclerAdapter.ViewHolderPDF" />
    </data>

    <TextView
        android:id="@+id/txtPdf"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:background="@color/white"
        android:clickable="true"
        android:drawablePadding="16dp"
        android:elevation="1dp"
        android:fontFamily="sans-serif"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:onClick="@{holder::saveFile}"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textSize="16sp" />
    <!--
        android:onClick="@{holder::onAccountClicked}"
        -->
</layout>